@model IEnumerable<Assignment2.Entities.Course>

@{
    ViewBag.Title = "All Courses";
}

<h2>All Courses</h2>

<div class="text-right mb-1" style="width:100%">
    @using (Html.BeginForm())
    {
        <!--Change style of searchbar-->
        <p>
            Find by title : @Html.TextBox("search", null, new { @class = "" })
            <input type="submit" value="Search" class="btn btn-info"/>
        </p>
    }
</div>
<table class="table">
    <tr >
        <th>
            @Html.ActionLink("Course title", "AllCourses", new { sort = ViewBag.CourseTitle })
        </th>
        <th>
            @Html.ActionLink("Stream", "AllCourses", new { sort = ViewBag.Stream })
        </th>
        <th>
            @Html.ActionLink("Type", "AllCourses", new { sort = ViewBag.Type })
        </th>
        <th>
            @Html.ActionLink("Start date", "AllCourses", new { sort = ViewBag.StartDate })
        </th>
        <th>
            @Html.ActionLink("End date", "AllCourses", new { sort = ViewBag.EndDate })
        </th>

        <th>
            <div class="text-center" style="width:100%">
                @Html.ActionLink("Insert new course", "CreateCourse", null, new { @class = "btn btn-primary" })
            </div>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stream)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            <div class="text-center" style="width:100%">
                @Html.ActionLink("Edit", "EditCourse", new { id = item.CourseId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "DetailsCourse", new { id = item.CourseId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseId }, new { @class = "btn btn-danger" })
            </div>
        </td>
    </tr>
}

</table>
