@model Assignment2.Web.Models.StudentAssignmentsViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Edit marks</h2>
        <hr />
        <h4>Students</h4>
        <div class="form-group">
            <table class="table">
                <tr>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                        Oral mark
                    </th>
                    <th>
                        Writing mark
                    </th>
                </tr>
                @for (int j = 0; j < Model.StudentAssignments.Count(); j++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.StudentAssignments[j].Student.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.StudentAssignments[j].Student.LastName)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.StudentAssignments[j].OralMark, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.StudentAssignments[j].OralMark, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.StudentAssignments[j].WritingMark, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.StudentAssignments[j].WritingMark, "", new { @class = "text-danger" })
                        </td>

                        <td hidden>
                            <input type="number" name="StudentAssignments[@j].StudentAssignmentId" value=@Model.StudentAssignments[j].StudentAssignmentId hidden />
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" /> @Html.ActionLink("Back to List", "AllAssignments", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

<script>

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}