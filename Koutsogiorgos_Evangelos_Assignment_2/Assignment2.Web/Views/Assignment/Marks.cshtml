@model List<Assignment2.Entities.StudentAssignment>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Edit marks</h2>
        <hr />
        <h4>Students</h4>
        <div class="form-group">
            <table class="table">
                <tr>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                        Oral mark
                    </th>
                    <th>
                        Writing mark
                    </th>
                </tr>
                @foreach (Assignment2.Entities.StudentAssignment studentAssignment in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => studentAssignment.Student.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => studentAssignment.Student.LastName)
                        </td>
                        <td>
                            @Html.EditorFor(model => studentAssignment.OralMark, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => studentAssignment.OralMark, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.EditorFor(model => studentAssignment.WritingMark, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => studentAssignment.WritingMark, "", new { @class = "text-danger" })
                        </td>

                        <td hidden>
                            <input type="number" name="studentAssignment.StudentAssignmentId" value=@studentAssignment.StudentAssignmentId hidden />
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" /> @Html.ActionLink("Back to List", "AllAssignments", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}